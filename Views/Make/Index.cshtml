
@model IEnumerable<Make>
@{
    ViewData["Title"] = "Index";
}

<br /><br />

<div class="row">
    <div class="col-6">
        <h2 class="text-info">Makes of Vehicle</h2>
    </div>
    <div class="col-6 text-right">
        <a class="btn btn-info" asp-action="Create"><i class="fas fa-motorcycle"></i> &nbsp; Add New Make</a>        
    </div>
    <br />
    <div class="col-12">
        <table class="table table-striped border" >
            <tr class="table-info">
                <th>
                    @Html.DisplayNameFor(m=>m.Name)
                </th>
                <th></th>
            </tr>
            @foreach(var item in Model)
            {
                <tr>
                    <td width="50%">
                        @Html.DisplayFor(m=>item.Name)
                    </td>
                    @*<partial name="_TableButtonPartials" model="item.Id" />   *@      
                    <td width="50%" class="text-end">
                        <div class="btn-group" role="group">
                         <a class="btn btn-primary mx-2" asp-action="Edit" asp-route-id="@item.Id">
                                <i class="bi bi-pencil-square"></i>&nbsp;Edit
                          </a>

                          <form method="post" action="Delete">
                            <input type="submit" value="Delete" onclick="if(!confirm('Are you sure you want delete')){return false}"
                                asp-controller="Make" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger mx-2" />
                                 
                          </form>
                         </div>

                    </td>
                </tr>
            }

        </table>
    </div>
</div>

